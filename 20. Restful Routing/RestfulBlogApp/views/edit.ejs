<%- include('partials/header') %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= blog.title %></div>
	<form action="/blogs/<%= blog._id%>?_method=PUT" method="POST" class="ui form">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" value="<%= blog.title %>" required>
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" value="<%= blog.image%>" required>
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]" required>
				<%= blog.body%>
			</textarea>
			<!-- <input type="text" name="blog[body]" placeholder="Blog Content"> -->
		</div>
		<input type="submit" name="" class="ui violet inverted button">
	</form>
</div>

<%- include('partials/footer') %>