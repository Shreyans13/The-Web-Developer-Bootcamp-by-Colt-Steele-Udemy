<%- include('../partials/header') %>

<div class="container">
	<h1 class="text-center">Edit Campground <%= campground.name %></h1>
	
	<form action='/campgrounds/<%= campground._id %>?_method=PUT' method="POST" style="width: 30%;" class="mx-auto">
		<div class="form-group">
			<label for="nameCampground">Name</label>
			<input type="text" class="form-control" type='text' name='campground[name]' value="<%= campground.name %>">
		</div>
		<div class="form-group">
			<label for="formGroupExampleInput2">Image</label>
			<input type="text" class="form-control" type='text' name='campground[image]' value="<%= campground.image %>">
		</div>
		<div class="form-group">
			<label for="formGroupExampleInput2">Price</label>
			<input type="number" class="form-control" type='text' name='campground[price]' value="<%= campground.price %>" min="0.01" step="0.01">
		</div>
		<div class="form-group">
			<label for="exampleFormControlTextarea1">Description</label>
			<textarea class="form-control" rows="12" type="text" name='campground[description]'><%= campground.description %></textarea>
		</div>
		<div class="form-group">
			<button  type="Submit" class="btn btn-success btn-block">Submit</button>
		</div>
		<a href="/campgrounds">Go Back</a>
	</form>
</div>

<%- include('../partials/footer') %>