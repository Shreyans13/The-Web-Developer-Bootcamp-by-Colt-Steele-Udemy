<%- include('../partials/header') %>

<div class="container">
	<h1 class="text-center">Create a New CampGround </h1>
	
	<form action='/campgrounds' method="POST" style="width: 30%;" class="mx-auto">
		<div class="form-group">
			<label for="nameCampground">Name</label>
			<input type="text" class="form-control" name='name' placeholder='Name'>
		</div>
		<div class="form-group">
			<label for="formGroupExampleInput2">Image</label>
			<input type="text" class="form-control" name='image' placeholder='Image url'>
		</div>
		<div class="form-group">
			<label for="formGroupExampleInput2">Price</label>
			<input type="number" class="form-control" name='price' placeholder='Price' min="1" step="1">
		</div>
		<div class="form-group">
			<label for="exampleFormControlTextarea1">Description</label>
			<textarea class="form-control" id="exampleFormControlTextarea1" rows="3" type="text" name="description" placeholder="Description of Campground"></textarea>
		</div>
		<div class="form-group">
			<button  type="Submit" class="btn btn-success btn-block">Submit</button>
		</div>
		<a href="/campgrounds">Go Back</a>
	</form>
</div>

<%- include('../partials/footer') %>