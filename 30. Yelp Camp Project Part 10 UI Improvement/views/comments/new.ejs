<%- include('../partials/header') %>

<div class="container">
	<h1 class="text-center">Add New Comments to <%= campground.name %></h1>
	
	<form action='/campgrounds/<%= campground._id %>/comments' method="POST" style="width: 30%;" class="mx-auto">
		<div class="form-group">
			<label for="nameCampground">Comment</label>
			<input type="text" class="form-control" type='text' name='comments[text]' placeholder='Comment text'>
		</div>
		<div class="form-group">
			<button type="Submit" class="btn btn-success btn-block">Submit</button>
		</div>
		<a href="/campgrounds">Go Back</a>
	</form>
</div>

<%- include('../partials/footer') %>